<UserControl
    x:Class="KIEPresentation.UserControls.WeekEvent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KIEPresentation.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
 
  >

    <Grid>
        <Border BorderBrush="Transparent" BorderThickness="1">
            <StackPanel Background="#FF00A600" Orientation="Vertical" x:Name="LayoutRoot">
                <TextBlock Name="title" Text="Titre" Foreground="White" FontSize="12" TextAlignment="Center" TextWrapping="Wrap"/>
                <TextBlock Name="time"  Text="Date" Foreground="White" FontSize="12" TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
